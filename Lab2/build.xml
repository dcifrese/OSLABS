<project name="Tone" default="compile" basedir=".">
<!--  set global properties for this build  -->
	<property name="src" location="src"/>
	<property name="dist" location="dist"/>
	<target name="init">
		<mkdir dir="${dist}"/>
		<mkdir dir="${dist}/classes"/>
	</target>
	<target name="compile" depends="init">
		<javac includeantruntime="false" srcdir="${src}" destdir="${dist}/classes"/>
	</target>
	<target name="jar" depends="init,compile">
		<jar destfile="${dist}/Tone.jar" basedir="dist/classes">
			<manifest>
				<attribute name="Main-Class" value="Tone"/>
			</manifest>
		</jar>
	</target>
	<target name="run" depends="jar">
		<java jar="dist/Tone.jar" fork="true"/>
	</target>
	<target name="clean">
		<delete dir="${dist}"/>
	</target>
</project>